{
  "snippets.userSnippetsDirectory": "~/.config/nvim/ultisnips",
  "snippets.extends": { "typescript": ["javascript"] },

  "semanticTokens.filetypes": ["go", "javascript", "lua", "typescript"],

  "suggest.noselect": false,
  "suggest.enablePreselect": true,
  "suggest.minTriggerInputLength": 2,
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },

  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",
  "diagnostic.floatConfig": {
    "border": true,
    "highlight": "Normal",
    "focusable": false
  },
  "diagnostic.signPriority": 20,
  "diagnostic.virtualText": true,

  "tree.closedIcon": "",
  "tree.openedIcon": "",
  "tree.key.close": "<Leader>q",

  "outline.keepWindow": true,

  "hover.floatConfig": {
    "border": true,
    "highlight": "Normal",
    "focusable": true
  },

  "signature.floatConfig": {
    "border": true,
    "highlight": "Normal",
    "focusable": false
  },

  "diagnostic-languageserver.mergeConfig": true,
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": ["-i", "2", "-ci", "-filename", "%filepath"]
    },
    "stylua": {
      "command": "stylua",
      "args": [
        "--search-parent-directories",
        "--stdin-filepath",
        "%filepath",
        "--",
        "-"
      ]
    },
    "goimports": {
      "command": "goimports",
      "args": ["-srcdir", "%dirname"]
    }
  },
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt",
    "lua": "stylua",
    "go": "goimports"
  },

  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"],
      "progressOnInitialization": true,
      "disabledFeatures": ["documentFormatting", "documentRangeFormatting"],
      "settings": {
        "gopls": {
          "usePlaceholders": true,
          "semanticTokens": true
        }
      }
    },
    "lua": {
      "command": "lua-language-server",
      "filetypes": ["lua"],
      "progressOnInitialization": true,
      "disabledFeatures": ["documentFormatting", "documentRangeFormatting"],
      "settings": {
        "Lua": {
          "diagnostics": {
            "enable": true,
            "globals": ["vim"]
          },
          "telemetry": { "enable": false },
          "completion": {
            "callSnippet": "Replace",
            "postfix": "."
          },
          "semantic": { "enable": true }
        }
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "zsh"],
      "progressOnInitialization": true
    },
    "intelephense": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php"],
      "progressOnInitialization": true,
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    }
  },

  "prettier.statusItemText": "",
  "cSpell.showStatus": false
}
